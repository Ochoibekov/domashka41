<%= will_paginate @posts %>



<div class="posts-wrapper row">
  <% @posts.each do |post| %>
    <div class="post">
      <div class="post-head">
        <div class="name">
          <%= post.user.name %><br>
        </div>
      </div>
      <div class="image center-block">
      <%#= image_tag post.image.url(:medium), class:'img-responsive' %>
        <%= link_to (image_tag post.image.url(:medium), class:'img-responsive'), user_post_path(post.user,post) %>
      </div>
      <p class="caption">
        <%= post.description %><br>	
      </p>
    </div>
  <% end %>
</div>