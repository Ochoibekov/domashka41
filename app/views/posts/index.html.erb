<%= will_paginate @posts %>



<div class="posts-wrapper row">
  <% @posts.each do |post| %>
    <div class="post">
      <div class="post-head">
        <div class="name">
          <%= post.user.name %><br>
        </div>
      </div>
      <div class="image center-block">
        <%= link_to (image_tag post.image.url(:medium), class:'img-responsive'), user_post_path(post.user,post) %>
      </div>
      <p class="caption">
        <%= post.description %><br>	
      </p>
    
    <% if post.comments %>
        <% post.comments.each do |comment| %>
          <div class="comment">
            <div class="user-name">
              <%= comment.user.name %>
            </div>
            <div class="comment-content">
              <%= comment.content %>
              <div class="text-right">
                  <% if comment.user == current_user %>
                    <%= link_to user_post_comment_path(post.user,post, comment), method: :delete, data: { confirm: "Are you sure?" } do %>
                      <span class="glyphicon glyphicon-remove delete-comment"></span>
                    <% end %>
                  <% end %>
              </div>    
            </div>
          </div>
        <% end %>
      <% end %>


      <div class="comment-like-form row">
      <div class="like-button col-sm-1">
        <span class="glyphicon glyphicon-heart-empty"></span>
      </div>
      <div class="comment-form col-sm-11">
        <%= form_for [post.user,post, post.comments.new] do |f| %>
          <%= f.text_field :content, placeholder: 'Add a comment...' %>
        <% end %>
      </div>
    </div>
  </div>



  <% end %>
</div>